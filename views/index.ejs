<%- include('./partials/header') %>

<% if(error.length > 0){ %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500 z-50 max-w-[90%] text-center">
        <span class="inline-block mt-1 mb-1 text-white text-sm md:text-base">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen flex lg:flex-row flex-col">

    <!-- Register Section -->
    <div class="w-full lg:w-1/2 flex items-center justify-center min-h-screen lg:h-screen bg-zinc-100 py-12 lg:py-0">

        <div class="w-full lg:w-1/2 px-6 sm:px-12 md:px-20 lg:px-32 max-w-xl lg:max-w-none">

            <h3 class="text-3xl sm:text-3xl md:text-4xl mb-2">Welcome to <span class="text-blue-400 font-bold">Scatch</span></h3>
            <h4 class="text-xl sm:text-2xl mb-5">Create your account</h4>

            <form autocomplete="off" action="/users/register" method="post">
                <input
                    class="bg-white block w-full px-3 py-2 sm:py-3 border-[1px] rounded-md mb-3 border-zinc-200 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="text" placeholder="Full Name" name="fullname" required>
                <input
                    class="bg-white block w-full px-3 py-2 sm:py-3 border-[1px] rounded-md mb-3 border-zinc-200 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="email" placeholder="Email" name="email" required>
                <input
                    class="bg-white block w-full px-3 py-2 sm:py-3 border-[1px] rounded-md mb-3 border-zinc-200 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="password" placeholder="Password" name="password" required>
                <input class="w-full sm:w-auto px-5 sm:px-8 rounded-full py-3 mt-2 bg-blue-500 hover:bg-blue-600 text-white cursor-pointer transition-colors text-sm sm:text-base" 
                    type="submit" value="Create My Account">
            </form>

            <p class="mt-4 text-sm lg:hidden text-gray-600">Already have an account? <a href="#login" class="text-blue-500 hover:underline lg:hidden">Login</a></p>
        
        </div>
        
    </div>
    
    <!-- Login Section -->
    <div id="login" class="w-full lg:w-1/2 flex items-center justify-center min-h-screen lg:h-screen py-12 lg:py-0">
        
        <div class=" w-full lg:w-1/2 px-6 sm:px-12 md:px-20 lg:px-32 max-w-xl lg:max-w-none">

            <h4 class="text-2xl   mb-5">Login to your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input
                    class="block bg-white w-full px-3 py-2 sm:py-3 border-[1px] rounded-md mb-3 border-zinc-200 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="email" placeholder="Email" name="email" required>
                <input
                    class="block bg-white w-full px-3 py-2 sm:py-3 border-[1px] rounded-md mb-3 border-zinc-200 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="password" placeholder="Password" name="password" required>
                <input class="w-full sm:w-auto px-5 sm:px-8 block rounded-full py-3 mt-2 bg-blue-500 hover:bg-blue-600 text-white cursor-pointer transition-colors text-sm sm:text-base" 
                    type="submit" value="Login">
            </form>
            <p class="mt-4 text-sm lg:hidden text-gray-600">Don't have an account? <a href="#" class="text-blue-500 hover:underline" onclick="window.scrollTo({top: 0, behavior: 'smooth'}); return false;">Sign up above</a></p>
        </div>

    </div>
    
</div>


<%- include('./partials/footer') %>