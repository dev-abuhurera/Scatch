<%- include('./partials/header') %>

<% if(error && error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 z-50">
        <span class="inline-block mt-1 mb-1 text-white"><%= error %></span>
    </div>
<% } %>

<% if(success && success.length > 0) { %>

    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500 z-50"> 
        <span class="inline-block mt-1 mb-1 text-white"> <%= success %> </span>
    </div>

<% } %>

    <div class="lg:w-full min-h-screen flex px-10 lg:px-14">

        <div class="w-full lg:w-1/2 flex items-center justify-center min-h-screen lg:h-screen  py-12 lg:py-0">
            
            <div class="w-full px-2 sm:px-12 lg:px-32 max-w-xl lg:max-w-none">

                <h4 class="text-2xl capitalize mb-5">Admin Access</h4>

                <form action="/owners/login" method="post">

                    <input class="block bg-zinc-100 w-full px-3 py-2 text-sm border-[1px] rounded-md mb-3 border-zinc-200"

                        type="email" placeholder="Email" name="email" required>
                        
                    <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"

                        type="password" placeholder="Password" name="password" required>

                    <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit" value="Login">

                </form>
                
                <p class="mt-4 text-sm text-gray-600">
                    Don't have an account? <a href="/owners/register" class="text-blue-500 hover:underline">Create one here</a>
                </p>

            </div>

        </div>
    </div>

<%- include('./partials/footer') %>